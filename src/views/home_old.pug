        header 
            h1 Noom
        main
            div#welcome
                form
                    input(placeholder="Room Name", type="text", required)
                    button Enter Room
                h4 Open Rooms: 
                ul
            div#room
                h3
                ul
                form#formNickname
                    input(placeholder="What's Your Name?", type="text", required)
                    button Save
                form#formMessage
                    input(placeholder="Write a Message", type="text", required)
                    button Send
